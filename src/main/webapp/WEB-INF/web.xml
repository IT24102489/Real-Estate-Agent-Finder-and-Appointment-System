<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>IT24102096 Ratings and Review System</display-name>
    
    <!-- Servlets Definitions -->
    <servlet>
        <servlet-name>ListReviewsServlet</servlet-name>
        <servlet-class>com.realestate.servlets.ListReviewsServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>ListAgentsServlet</servlet-name>
        <servlet-class>com.realestate.servlets.ListAgentsServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>AddReviewServlet</servlet-name>
        <servlet-class>com.realestate.servlets.AddReviewServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>UpdateReviewServlet</servlet-name>
        <servlet-class>com.realestate.servlets.UpdateReviewServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>DeleteReviewServlet</servlet-name>
        <servlet-class>com.realestate.servlets.DeleteReviewServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>com.realestate.servlets.AuthServlet</servlet-class>
    </servlet>
    
    <!-- Servlet Mappings -->
    <servlet-mapping>
        <servlet-name>ListReviewsServlet</servlet-name>
        <url-pattern>/listReviews</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ListAgentsServlet</servlet-name>
        <url-pattern>/listAgents</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>AddReviewServlet</servlet-name>
        <url-pattern>/addReview</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>UpdateReviewServlet</servlet-name>
        <url-pattern>/updateReview</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>DeleteReviewServlet</servlet-name>
        <url-pattern>/deleteReview</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
    
    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- Test Servlet for basic functionality testing -->
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>com.realestate.servlets.TestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>InitializeDataServlet</servlet-name>
        <servlet-class>com.realestate.servlets.InitializeDataServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>InitializeDataServlet</servlet-name>
        <url-pattern>/init-data</url-pattern>
    </servlet-mapping>
    
    <!-- Filters temporarily removed to debug startup issues -->

    
    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/error.jsp</location>
    </error-page>
    
    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>